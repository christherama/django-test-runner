{
  "name": "django-test-runner",
  "displayName": "Django Test Runner",
  "description": "Runs Django tests via manage.py test",
  "publisher": "christherama",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/christherama/django-test-runner"
  },
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:django-test-runner.runTests",
    "onView:django-tests"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "DjangoTestRunner",
      "properties": {
        "djangoTestRunner.pythonInterpreter": {
          "type": "string",
          "default": "python",
          "description": "Path to Python interpreter, e.g. `~/.pyenv/versions/monolith/bin/python`"
        },
        "djangoTestRunner.useDefaultShell": {
          "type": "boolean",
          "default": true,
          "description": "Use the default shell. When false, the shell used is `/bin/sh`"
        },
        "djangoTestRunner.xmlRunnerReportPath": {
          "type": "string",
          "default": null,
          "description": "Path (relative to workspace root) to XML report generated by XMLRunner"
        },
        "djangoTestRunner.testArgs": {
          "type": "string",
          "default": null,
          "description": "Arguments to append to django test invocation"
        }
      }
    },
    "commands": [
      {
        "command": "django-test-runner.runTests",
        "title": "Django Test Runner: Run Tests"
      }
    ],
    "keybindings": {
      "command": "django-test-runner.runTests",
      "key": "ctrl+shift+r",
      "mac": "cmd+shift+r",
      "when": "editorTextFocus"
    },
    "views": {
      "django-test-explorer": [
        {
          "id": "django-tests",
          "name": "Django Tests"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "django-test-explorer",
          "title": "Django Test Explorer",
          "icon": "resources/dj.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@types/xml2js": "^0.4.5",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/vscode": "^1.44.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
