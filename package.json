{
  "name": "django-test-runner",
  "displayName": "django-test-runner",
  "description": "Runs Django tests via manage.py test",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:django-test-runner.runTests",
    "onView:django-tests"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "django-test-runner.runTests",
        "title": "Django Test Runner: Run Tests"
      }
    ],
    "views": {
      "django-test-explorer": [
        {
          "id": "django-tests",
          "name": "Django Tests"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "django-test-explorer",
          "title": "Django Test Explorer",
          "icon": "resources/light/dj.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@types/xml2js": "^0.4.5",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/vscode": "^1.44.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
